<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.exercises.sart1991.dialogw1m5.MainActivity"
    android:stretchColumns="*"
    android:shrinkColumns="*">

    <TableRow>
        <Button
            android:text="@string/dialogo_alerta"
            android:onClick="onClickDialogoAlerta"/>
        <Button
            android:text="@string/dialogo_confirmacion"
            android:onClick="onClickDialogoConfirmacion"/>
    </TableRow>
    <TableRow>
        <Button
            android:text="@string/dialogo_fragmento"
            android:onClick="onClickDialogoFragmento"/>
        <Button
            android:text="@string/dialogo_lista"
            android:onClick="onClickDialogoLista"/>
    </TableRow>
    <TableRow>
        <Button
            android:text="@string/dialogo_checklist"
            android:onClick="onClickDialogChecklist"/>
        <Button
            android:text="@string/button_dialogo_fragmento_custom"
            android:onClick="onClickDialogCustom"
            android:id="@+id/custom_btn_main"/>
    </TableRow>

    <TableRow>
        <Button
            android:text="@string/dialog_color_picker"
            android:onClick="onClickDialogColorPicker"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/color_picker_view"
            android:layout_gravity="end"/>
    </TableRow>

</TableLayout>
