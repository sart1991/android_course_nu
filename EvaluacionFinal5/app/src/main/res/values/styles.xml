<resources>
    
    <!-- Default theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    
    <!-- Facebook theme -->
    <style name="AppTheme.Facebook" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryF</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkF</item>
    </style>
    
    <!-- Instagram theme -->
    <style name="AppTheme.Instagram" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryI</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkI</item>
    </style>
    
    <!-- G+ theme -->
    <style name="AppTheme.Gplus" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryG</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkG</item>
        <item name="colorAccent">@color/colorSecondaryG</item>
    </style>
    
    <!-- Twitter theme -->
    <style name="AppTheme.Twitter" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryT</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkT</item>
    </style>
    
    <style name="NavViewTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorSecondary</item>
    </style>
    
    <style name="TabLayoutTheme" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>
    
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.ActionBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    
</resources>
