<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/text_clasification_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_text_details_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/details_image_view_content_1"
                android:layout_width="0dp"
                android:layout_height="@dimen/image_view_details_height"
                android:layout_weight="1"
                android:src="@drawable/holder_image"
                style="@style/ImageInstruments"/>
            <ImageView
                android:id="@+id/details_image_view_content_2"
                android:layout_width="0dp"
                android:layout_height="@dimen/image_view_details_height"
                android:layout_weight="1"
                android:src="@drawable/holder_image"
                style="@style/ImageInstruments"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/image_btn_favorite_1"
                style="@style/ButtonDetailsFavorite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_star_black_24dp"/>
            <ImageButton
                android:id="@+id/image_btn_play_1"
                style="@style/ButtonDetailsPlay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_play_arrow_black_24dp"/>
            <ImageButton
                android:id="@+id/image_btn_favorite_2"
                style="@style/ButtonDetailsFavorite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_star_black_24dp"/>
            <ImageButton
                android:id="@+id/image_btn_play_2"
                style="@style/ButtonDetailsPlay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_play_arrow_black_24dp"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:id="@+id/text_details_name"
            android:layout_above="@+id/text_details_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/details_name"/>
        <TextView
            android:id="@+id/text_details_url"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/details_url"/>
    </RelativeLayout>
</LinearLayout>