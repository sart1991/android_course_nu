<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@color/colorPrimary">
    
    <ImageView
        android:id="@+id/img_nav_header"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="24dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_account"
        android:tint="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"/>
    
    <TextView
        android:id="@+id/txt_nav_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/_user"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="@id/img_nav_header"
        app:layout_constraintTop_toBottomOf="@id/img_nav_header"
        android:textStyle="bold"/>
    
    <TextView
        android:id="@+id/txt_nav_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_email_example"
        app:layout_constraintTop_toBottomOf="@id/txt_nav_user"
        app:layout_constraintLeft_toLeftOf="@id/txt_nav_user"
        android:textColor="@android:color/white"/>

</android.support.constraint.ConstraintLayout>