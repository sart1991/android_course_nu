<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullWidthTextView" parent="@android:style/TextAppearance.Small">
        <item name="android:gravity">start</item>
        <item name="android:padding">@dimen/view_padding</item>
    </style>

    <style name="FullWidthEditText" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/view_padding</item>
    </style>

    <style name="ViewSeparatorVertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

</resources>
