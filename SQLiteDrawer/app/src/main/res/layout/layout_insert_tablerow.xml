<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp">
    
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView
            android:text="id"
            android:id="@+id/textView_tableRow_idVisualizer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/view_tableRow_verticalSeparator"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_weight="1"/>
    
        <View
            android:id="@+id/view_tableRow_verticalSeparator"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:backgroundTint="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/textView_tableRow_idVisualizer"
            app:layout_constraintRight_toLeftOf="@+id/textView_tableRow_brandVisualizer"/>
        
        <TextView
            android:text="brand"
            android:id="@+id/textView_tableRow_brandVisualizer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/view_tableRow_verticalSeparator"
            app:layout_constraintRight_toLeftOf="@+id/textView_tableRow_quantityVisualizer"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_weight="4"/>
        
        <TextView
            android:text="quantity"
            android:id="@+id/textView_tableRow_quantityVisualizer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/textView_tableRow_brandVisualizer"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_weight="2"/>
        
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>