<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.exercises.sart1991.animationsgraphicsmultimedia.ui.activity.animation.AnimationActivity">
    
    <ImageView
        android:id="@+id/imageView_animation_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ball_black_24dp"
        android:tint="@color/colorAccent"/>
    
    <Button
        android:id="@+id/button_animation_animate1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/animation_buttonFirst"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button_animation_animate2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95"
        android:onClick="onClickButtonAnimate"/>
    
    <Button
        android:id="@+id/button_animation_animate2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/animation_buttonSecond"
        app:layout_constraintLeft_toRightOf="@id/button_animation_animate1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95"
        android:onClick="onClickButtonAnimate"/>

</android.support.constraint.ConstraintLayout>
