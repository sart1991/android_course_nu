<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.exercises.sart1991.backgroundtasks.ui.activity.json.JsonActivity"
    tools:showIn="@layout/content_json"
    android:background="@android:color/white"
    android:elevation="8dp">
    
    <TextView
        android:id="@+id/textView_json_titleVerbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/json_textViewTitleVerbs"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button_json_get"
        app:layout_constraintTop_toTopOf="@+id/button_json_get"
        app:layout_constraintBottom_toBottomOf="@+id/button_json_get"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
    
    <Button
        android:id="@+id/button_json_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/json_buttonGet"
        app:layout_constraintLeft_toRightOf="@id/textView_json_titleVerbs"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
