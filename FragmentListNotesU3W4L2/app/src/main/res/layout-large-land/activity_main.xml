<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:baselineAligned="false">

    <fragment
        android:id="@+id/view_fragment_list_notes"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:name="com.example.sergioalejandro.fragmentlistnotesu3w4l2.ListNotesFragment"
        tools:layout="@layout/fragment_list_notes"/>

    <fragment
        android:id="@+id/view_fragment_notes_details"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:name="com.example.sergioalejandro.fragmentlistnotesu3w4l2.NotesDetailsFragment"
        tools:layout="@layout/fragment_notes_details"/>

</LinearLayout>